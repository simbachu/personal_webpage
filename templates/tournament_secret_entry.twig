{% extends "layout.twig" %}

{% block content %}
<section class="tournament-secret-entry">
    <h1>Enter Verification Code</h1>
    
    <p>Enter the 8-character code sent to <strong>{{ email|default('your email') }}</strong> to complete registration.</p>
    
    {% if error is defined %}
    <div class="error-message">
        <p>{{ error }}</p>
    </div>
    {% endif %}
    
    <form method="POST" action="/tournament/secret" class="tournament-form">
        <input type="hidden" name="email" value="{{ email|default('') }}">
        
        <div class="form-group">
            <label for="secret">Verification Code</label>
            <input 
                type="text" 
                id="secret" 
                name="secret" 
                required 
                maxlength="8"
                pattern="[A-Z2-9]{8}"
                placeholder="ABCD1234"
                style="text-transform: uppercase; letter-spacing: 4px; font-family: monospace; font-size: 1.5em; text-align: center;"
            >
            <small>Enter the 8-character code from your email</small>
        </div>
        
        <button type="submit" class="button button-primary">Verify & Start Tournament</button>
    </form>
    
    <p class="help-text">Didn't receive the code? Check your spam folder or try registering again.</p>
</section>
{% endblock %}

